pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile'
        }
    }
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: "refs/tags/openssl-3.2.1"]],
                          userRemoteConfigs: [[url: 'https://github.com/openssl/openssl']],
                          dir: 'openssl'
                          ])
            }
        }
        stage('Build') {
            steps {
                script {
                    sh './Configure --prefix=./openssl-compiled'
                    sh 'make'
                    sh 'make test || { echo "make test has failed!"; exit 1; }'
                    sh 'make install'
                }
            }
        }
            post {
                failure {
                    script {
                        echo 'Build failed'
                    }
                }
            }
        stage('Package') {
            steps {
                    sh 'dpkg-deb --build openssl-compiled'
                archiveArtifacts artifacts: 'openssl-compiled/openssl.deb'
            }
        }
        stage('Deploy') {
            steps {
                sh 'scp openssl-compiled/openssl.deb user@172.17.0.3:/tmp'
            }
        }
    }
}
