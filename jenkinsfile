pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile'
        }
    }
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: "refs/tags/openssl-3.2.1"]],
                          userRemoteConfigs: [[url: 'https://github.com/openssl/openssl']],
                          dir: 'openssl'
                          ])
            }
        }
        stage('Build') {
            steps {
                script {
                    sh './Configure --prefix=/tmp/openssl'
                    sh 'make -j$(nproc)'
                    sh 'make test -j$(nproc) || { echo "make test has failed!"; exit 1; }'
                    sh 'make install'
                }
            }
            post {
                failure {
                    script {
                        echo 'Build failed'
                    }
                }
            }
        }
        stage('Package') {
            steps {
                    sh 'mkdir -p /tmp/openssl/DEBIAN'
                    sh 'cp /tmp/openssl/* /tmp/openssl/DEBIAN'
                    writefile file: '/tmp/openssl/DEBIAN/control', text: '''
                    Package: openssl
                    Version: 3.2.1
                    Architecture: amd64
                    Maintainer: Effie Talor eftalor@gmail.com
                    Description: OpenSSL
                    '''
                    sh 'dpkg-deb --build /tmp/openssl/DEBIAN'
                archiveArtifacts artifacts: '/tmp/openssl/DEBIAN/openssl.deb'
            }
        }
        stage('Deploy') {
            steps {
                sh 'scp /tmp/openssl/openssl-compiled/openssl.deb root@172.17.0.4:/tmp'
            }
        }
    }
}
