pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile'
            label 'docker-build'
        }
    }
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/master']],
                          userRemoteConfigs: [[url: 'https://github.com/openssl/openssl']],
                          extensions: [[$class: 'CloneOption', noTags: false, reference: '', shallow: false]],
                          tag: 'openssl-3.2.1',
                          dir: 'openssl-src'])
            }
        }
        stage('Build') {
            steps {
                script {
                    dir('openssl-src') {
                        sh './config'
                        sh 'make'
                        sh 'make test || { echo "make test has failed!"; exit 1; }'
                        sh 'make install'
                    }
                }
            }
            post {
                failure {
                    script {
                        echo 'Build failed'
                    }
                }
            }
        }
        stage('Package') {
            steps {
                dir('openssl-src') {
                    sh 'dpkg-deb --build openssl'
                }
                archiveArtifacts artifacts: 'openssl-src/openssl.deb'
            }
        }
        stage('Deploy') {
            steps {
                sh 'scp openssl-src/openssl.deb user@172.17.0.3:/tmp'
            }
        }
    }
}
